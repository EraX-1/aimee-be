# Application
APP_NAME=AIMEE-Backend
APP_VERSION=1.0.0
DEBUG=True
LOG_LEVEL=INFO

# Server
HOST=0.0.0.0
PORT=8000
WORKERS=1

# Database
DATABASE_URL=mysql+mysqlconnector://user:password@localhost:3306/aimee_db
DATABASE_POOL_SIZE=10
DATABASE_MAX_OVERFLOW=20

# Redis
REDIS_URL=redis://localhost:6379/0

# CORS
CORS_ORIGINS=["http://localhost:3000","http://localhost:5173"]

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# AI/LLM Configuration
OLLAMA_HOST=ollama
OLLAMA_PORT=11434
OLLAMA_MODEL=gemma3:4b-instruct
EMBEDDING_MODEL=nomic-embed-text

# RAG Configuration
CHUNK_SIZE=512
CHUNK_OVERLAP=50
TOP_K_RESULTS=5
SIMILARITY_THRESHOLD=0.7

# ChromaDB Configuration
CHROMADB_HOST=chromadb
CHROMADB_PORT=8000
CHROMADB_PERSIST_DIR=/app/data/chromadb

# Performance Optimization
OLLAMA_NUM_THREADS=8
OLLAMA_NUM_GPU_LAYERS=20
OLLAMA_CONTEXT_SIZE=2048
OLLAMA_BATCH_SIZE=512

# Cache Configuration
ENABLE_VECTOR_CACHE=true
CACHE_TTL_SECONDS=3600
ENABLE_LLM_CACHE=true

# API Keys (for external services)
OPENAI_API_KEY=your-openai-api-key

# Environment
ENVIRONMENT=development