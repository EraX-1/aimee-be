# 本番環境設定
APP_NAME=AIMEE-Backend
APP_VERSION=1.0.0
DEBUG=false
LOG_LEVEL=WARNING
ENVIRONMENT=production

# API設定
HOST=0.0.0.0
PORT=8000
API_V1_PREFIX=/api/v1

# データベース設定（本番用）
DATABASE_URL=mysql+pymysql://aimee_user:Aimee2024!@mysql:3306/aimee_db
DATABASE_POOL_SIZE=50
DATABASE_MAX_OVERFLOW=100

# AI/LLM設定（マルチモデル）
OLLAMA_LIGHT_HOST=ollama-light
OLLAMA_LIGHT_PORT=11434
INTENT_MODEL=qwen2:0.5b          # 超軽量意図解析

OLLAMA_MAIN_HOST=ollama-main
OLLAMA_MAIN_PORT=11434
MAIN_MODEL=gemma:7b              # メイン統合判断

# パフォーマンス最適化（本番用）
OLLAMA_NUM_PARALLEL=8            # 軽量LLM並列数
OLLAMA_CONTEXT_SIZE=4096         # コンテキストサイズ
OLLAMA_BATCH_SIZE=1024           # バッチサイズ

# ハイブリッド処理設定
ENABLE_PARALLEL_PROCESSING=true  # 専門エンジン並列実行
HYBRID_TIMEOUT_SECONDS=30        # ハイブリッド処理タイムアウト
STREAMING_RESPONSE=true          # ストリーミング回答
SIMPLE_TASK_THRESHOLD=0.8        # 軽量モデル振り分け閾値

# ChromaDB設定（ナレッジベース）
CHROMADB_HOST=chromadb
CHROMADB_PORT=8000
CHROMADB_AUTH_TOKEN=aimee-chroma-token-production
CHROMADB_COLLECTION=aimee_knowledge

# Redis設定（高速キャッシュ）
REDIS_URL=redis://redis:6379/0
REDIS_MAX_MEMORY=4gb
REDIS_EVICTION_POLICY=allkeys-lru

# RAG設定
CHUNK_SIZE=512                   # ナレッジチャンクサイズ
TOP_K_RESULTS=10                 # 検索結果数
SIMILARITY_THRESHOLD=0.75        # 類似度閾値
ENABLE_VECTOR_CACHE=true         # ベクトル検索キャッシュ
CACHE_TTL_SECONDS=7200           # キャッシュ有効期間（2時間）

# セキュリティ設定（本番用の強力なキーに変更してください）
SECRET_KEY=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING_IN_PRODUCTION
ACCESS_TOKEN_EXPIRE_MINUTES=15
REFRESH_TOKEN_EXPIRE_DAYS=3

# CORS設定（本番環境のドメインに変更）
CORS_ORIGINS=["https://yourdomain.com"]

# OpenAI API（必要な場合）
OPENAI_API_KEY=